<%-include('../partials/header',{title: "Register"})%>
<div class="container d-flex justify-content-center align-items-center mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
                <img src="https://thumbs.dreamstime.com/z/payment-method-related-vector-glyph-icon-isolated-black-background-vector-illustration-payment-method-related-vector-glyph-icon-213583392.jpg"
                    alt="" class="card-img-top" />
                <div class="card-body">
                    <h5 class="card-title">Register</h5>
                    <form action="/register" method="POST" class="needs-validation" novalidate enctype="multipart/form-data">
                        <div class="mb-3">
                            <label class="form-label" for="username">Username</label>
                            <input class="form-control" type="text" id="username" name="username" required autofocus>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please choose a username.
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="name">Name</label>
                            <input class="form-control" type="name" id="name" name="name" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please give your name.
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="password">Password</label>
                            <input class="form-control" type="password" id="password" name="password" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please choose a password.
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="image">Choose an Image:</label>
                            <input class="form-control" type="file" name="image" id="image">    
                        </div>
                        <div class="mb-1">
                            If you dont choose then the default picture will be chosen.
                        </div>
                        <div class="mb-3">
                            <img src="/images/user.jpg" alt="" style="width: 100px; height: 100px;">
                        </div>
                        <button class="btn btn-success btn-block">Register</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
<%-include('../partials/footer')%>