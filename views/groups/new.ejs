<%-include('../partials/header',{title: "New Group"})%>
<h1>Add New Group</h1>
<form class="needs-validation" novalidate action="/groups" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label for="name">Name: </label>
        <input class="form-control" type="text" name="group[name]" id="name">
    </div>
    <div class="mb-3">
        <label for="image">Choose an Image:</label>
        <input class="form-control" type="file" name="image" id="image">    
    </div>
    <div class="mb-3">
        <button class="btn btn-success" type="submit">Add</button>
    </div>
</form>

<%-include('../partials/footer')%>