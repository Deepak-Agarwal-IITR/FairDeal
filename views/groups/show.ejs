<%-include('../partials/header',{title: group.name})%>
<h1> <%=group.name%> </h1>
<% if(currentUser && currentUser._id.equals(group.owner._id)){ %> 
    <div class="row mb-3">
        <div class="col-auto">
            <a class="btn btn-success" href="/groups/<%= group._id%>/edit">Edit</a>
        </div>
        <div class="col-auto">
            <form action="/groups/<%= group._id%>?_method=DELETE" method="post">
                <button class="btn btn-danger">Delete</button>
            </form>
        </div>
    </div>
<%}else if(currentUser && !((group.owner.equals(currentUser._id) || group.users.filter(user => user.uid.toString() === currentUser._id.toString()).length > 0))){%>
    <div class="row mb-3">
        <form action="/groups/<%=group._id%>/join" method="POST">
            <button class="btn btn-primary">Join Group</button> 
        </form>
    </div>
<%}%>
<% if(currentUser && (group.owner.equals(currentUser._id) || group.users.filter(user => user.uid.toString() === currentUser._id.toString()).length > 0)){%>
    <div class="row mb-3">
        <div class="col-auto">
            <a class="btn btn-light" href="/groups/<%= group._id%>/transactions">Make Transaction</a>
        </div>
    </div>
<%}%>
<%-include('../partials/footer')%>